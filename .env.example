# Database configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=vectordb

# OpenAI configuration
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=text-embedding-3-small

# Vector settings
EMBEDDING_DIM=1536
# Number of IVFFlat lists (adjust based on data size)
VECTOR_INDEX_LISTS=100
# Number of probes for search (more probes = more accurate but slower)
VECTOR_INDEX_PROBES=10

# File processing
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Test configuration
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5433/vectordb_test
